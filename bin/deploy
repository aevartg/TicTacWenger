#!/bin/bash

APP="TicTacWenger"

#clean and make new version
./gradlew clean
sh ./bin/package

# make javadoc
sh ./bin/documentJar

# converts markdown reports to html
sh ./bin/mdToHtml

[ -d tmp ] || mkdir tmp

# copy the file from install to tmp outside of workingdirectory
cp -r build/install/${APP}/lib/${APP}.jar tmp
cp -Ra build/docs/javadoc docs 
